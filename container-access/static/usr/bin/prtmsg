#!/bin/bash

#################################
# console output colors
#################################

C_INFO=`tput setaf 4`
C_SUCCESS=`tput setaf 2`
C_WARN=`tput setaf 3`
C_ERROR=`tput setaf 1`
C_RESET=`tput sgr0`


#################################
# main
#################################

USAGE="Usage: $0 [OPTIONS] TYPE MESSAGE

Print a colorful message

  -h, --help           Prints this help

TYPE can be one of: ERROR, WARN, INFO, SUCCESS (default INFO)"

if [[ $# < 2 ]]; then
    echo "$USAGE"
    exit 1
elif [[ "$1" == -h || "$1" == --help ]]; then
    echo "$USAGE"
    exit 0
fi

log_level="$1"
shift

case "$log_level" in
    ERROR)
        echo "${C_ERROR}$@${C_RESET}"
        ;;
    WARN)
        echo "${C_WARN}$@${C_RESET}"
        ;;
    INFO)
        echo "${C_INFO}$@${C_RESET}"
        ;;
    SUCCESS)
        echo "${C_SUCCESS}$@${C_RESET}"
        ;;
    *)
        echo "${C_INFO}$@${C_RESET}"
        ;;
esac
