# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile*]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.py]
max_line_length = 80

[*.json]
indent_size = 2
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false
