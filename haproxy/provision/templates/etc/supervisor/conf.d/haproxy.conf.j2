[program:haproxy]
command=/usr/sbin/haproxy -p /var/run/container/haproxy.pid -f {{ HAPROXY_CONFIG_FILE }}
autostart=true
autorestart=unexpected
redirect_stderr=true
stdout_logfile={{ '/container/log/haproxy.log' if SUPERVISOR_LOGTYPE == 'file' else 'syslog @' + SUPERVISOR_SYSLOG_PROTOCOL + ':' + SUPERVISOR_SYSLOG_HOST + ':' + SUPERVISOR_SYSLOG_PORT|string }}
stdout_logfile_maxbytes={{ SUPERVISOR_LOGFILE_MAXBYTES }}
stdout_logfile_backups={{ SUPERVISOR_LOGFILE_BACKUPS }}
