# aisberg/mariadb aisberg/mariadb:10.3.3
FROM mariadb:10.3.3

# included from template-ubuntu ------------------------------------------------
INCLUDE ../template-ubuntu
#-------------------------------------------------------------------------------

LABEL Author="Andre Lehmann <aisberg@posteo.de>" \
    Version=2.9 \
    Comment="MariaDB is a community-developed fork of the MySQL relational database management system. (https://mariadb.org/)"

RUN rm /docker-entrypoint.sh

COPY provision/ /provision

VOLUME /etc/mysql/conf.d

# remove start command from original mariadb image
CMD [""]
