# autogen true

{% if NGINX_REDIRECT_TO_FIRST_DOMAIN and DOMAINNAMES is defined and DOMAINNAMES|length > 1 -%}
server {
    listen                 80;
    listen                 [::]:80;
    listen                 443 ssl {{ 'http2' if NGINX_HTTP_VERSION == "2.0" }};
    listen                 [::]:443 ssl {{ 'http2' if NGINX_HTTP_VERSION == "2.0" }};
    server_name            {% for domain in DOMAINNAMES %}{% if not loop.first %}{{ domain }} {% endif %}{% endfor %};

    location / {
        return 301         $real_scheme://{{ DOMAINNAMES[0] }}$request_uri;
    }

    # Let's Encrypt challenge response uri
    location ^~ /.well-known/acme-challenge {
        default_type "text/plain";
        root /var/www/letsencrypt-challenge-response;
    }
}

{% endif -%}
server {
    listen                 80;
    listen                 [::]:80;
    listen                 443 ssl {{ 'http2' if NGINX_HTTP_VERSION == "2.0" }} default_server;
    listen                 [::]:443 ssl {{ 'http2' if NGINX_HTTP_VERSION == "2.0" }};
    {% if DOMAINNAMES is defined -%}
    server_name            {% if NGINX_REDIRECT_TO_FIRST_DOMAIN %}{{ DOMAINNAMES[0] }}{% else %}{% for domain in DOMAINNAMES %}{{ domain }} {% endfor %}{% endif %};
    {%- endif %}

    root                   /var/www/mediawiki;
    index                  index.php;

    rewrite_by_lua_block {
        -- apply rules to all requests, but not to challenge responses
        if not string.match(ngx.var.request_uri, "^/%.well%-known/acme%-challenge") then
            -- redirect scheme to https when conditions are met
            if {% if NGINX_TLS_ONLY %}ngx.var.real_scheme ~= "https" or{% endif %}
                    -- rewrite scheme to https to enable encryption when accessing installation page
                    string.match(ngx.var.request_uri, "^/mw-config/index%.php/") then
                return ngx.redirect("https://" .. ngx.var.host .. ngx.var.request_uri, 301)
            end
        end
    }

    # Let's Encrypt challenge response uri
    location ^~ /.well-known/acme-challenge {
        default_type "text/plain";
        root /var/www/letsencrypt-challenge-response;
    }

    location / {
        # prevent SYN-flood
        # limit concurrent connections per ip
        limit_conn conn_limit_per_ip {{ NGINX_CONN_LIMIT_PER_IP }};
        # limit requests per second per ip
        limit_req zone=req_limit_per_ip burst={{ NGINX_REQ_LIMIT_PER_IP_BURST }};

        try_files $uri $uri/ @rewrite;
    }

    location @rewrite {
        rewrite ^/(.*)$ /index.php?title=$1&$args last;
    }

    location = /robots.txt  { log_not_found off; }
    location = /favicon.ico { access_log off; log_not_found off; }
    location ~ /\.          { access_log off; log_not_found off; deny all; }

    # Force potentially-malicious files in the /images directory to be served
    # with a text/plain mime type, to prevent them from being executed by
    # the PHP handler
    location ~* ^/images/.*.(html|htm|shtml|php)$ {
        types { }
        default_type text/plain;
    }

    # optional include
    include conf.d/mediawiki/include-mediawiki;

    # pass PHP to FastCGI
    location ~ ^(.+\.php)(.*)$ {
        try_files                $uri =404;
        fastcgi_split_path_info  ^(.+\.php)(.*)$;
        include                  /etc/nginx/fastcgi_params;
        fastcgi_read_timeout     {{ NGINX_FASTCGI_READ_TIMEOUT }};
        fastcgi_index            index.php;
        fastcgi_param            SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        fastcgi_pass             unix:/var/run/php7-fpm.sock;
    }

    # restrict access to dirs and files
    location ^~ ^/(cache|includes|maintenance|languages|serialized|tests|images/deleted)/ { deny all; }
    {% if env.MEDIAWIKI_IS_INSTALLED == 'True' -%}
    location ^~ ^/mw-config/ { internal; }
    {%- endif %}
    location ^~ ^/(bin|docs|extensions|includes|maintenance|resources|serialized|tests)/ { internal; }
    # redirect all requests for unknown URLs back to index.php in the root dir
    location ^~ /images/ { try_files $uri /index.php; }
    location ^~ /uploads/ { try_files $uri /index.php; }

    # client caching
    location ~* \.(?:css|js|jpg|jpeg|gif|png|ico|cur|gz|svg|svgz|mp4|ogg|ogv|webm|htc)$ {
        expires                  1M;
        more_set_headers         "Pragma: public";
        more_set_headers         "Cache-Control: public, must-revalidate, proxy-revalidate";
        try_files                $uri $uri/ @rewrite;
    }
    location ~* \.(?:rss|atom)$ {
        expires                  1h;
        more_set_headers         "Cache-Control: public";
    }
}
